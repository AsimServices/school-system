<!-- This single file contains the Home Dashboard layout, matching the structure and cards from the user's School Portal screenshots. -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>School Portal Home Dashboard</title>
    <!-- Load Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <!-- Load Lucide Icons for vector-based icons -->
    <script type="module">
        import { createIcons, Calendar, BookOpen, UserCheck, Bell } from 'https://cdn.jsdelivr.net/npm/lucide-esm@latest';
        createIcons({ icons: { Calendar, BookOpen, UserCheck, Bell } });
    </script>
    <style>
        :root {
            --sidebar-width: 260px;
            --sidebar-color: #141E30; /* Dark Blue */
            --accent-color: #2a5298; /* School Portal Blue */
        }
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f0f4f8; /* Very light background for content area */
            display: flex;
            min-height: 100vh;
            overflow-x: hidden;
        }
        /* Dashboard Container Layout */
        #sidebar {
            width: var(--sidebar-width);
            min-height: 100vh;
            background-color: var(--sidebar-color);
            position: fixed;
            top: 0;
            left: 0;
            z-index: 50;
        }
        #main-content {
            margin-left: var(--sidebar-width);
            width: calc(100% - var(--sidebar-width));
            transition: margin-left 0.3s ease-in-out;
        }
        @media (max-width: 1024px) {
            #sidebar {
                transform: translateX(-100%);
                width: 250px;
            }
            #sidebar.open {
                transform: translateX(0);
            }
            #main-content {
                margin-left: 0;
                width: 100%;
            }
        }

        /* Card Colors based on screenshot */
        .card-events { border-left: 4px solid var(--accent-color); } /* Blue */
        .card-exams { border-left: 4px solid #ffc107; } /* Yellow/Orange */
        .card-attendance { border-left: 4px solid #28a745; } /* Green */
        .card-notices { border-left: 4px solid #dc3545; } /* Red */
        
        .card-icon { width: 1.5rem; height: 1.5rem; }
    </style>
</head>
<body>

    <!-- Sidebar (Navigation) -->
    <div id="sidebar" class="text-white p-4 flex flex-col shadow-2xl">
        <div class="text-2xl font-bold py-4 mb-4" style="color: white; background-color: var(--accent-color); padding: 10px; border-radius: 8px;">School Portal</div>
        <nav class="flex-grow">
            <!-- Home is Active -->
            <a href="/dashboard" class="flex items-center p-3 rounded-lg mb-2 bg-slate-700 font-semibold shadow-inner">
                <span class="w-6 h-6 mr-3"></span> Home
            </a>
            <a href="/classes" class="flex items-center p-3 rounded-lg mb-2 hover:bg-slate-700/70 transition">
                <span class="w-6 h-6 mr-3"></span> Classes
            </a>
            <a href="/attendance" class="flex items-center p-3 rounded-lg mb-2 hover:bg-slate-700/70 transition">
                <span class="w-6 h-6 mr-3"></span> Attendance
            </a>
            <a href="/exams" class="flex items-center p-3 rounded-lg mb-2 hover:bg-slate-700/70 transition">
                <span class="w-6 h-6 mr-3"></span> Exams
            </a>
            <a href="/events" class="flex items-center p-3 rounded-lg mb-2 hover:bg-slate-700/70 transition">
                <span class="w-6 h-6 mr-3"></span> Events
            </a>
            <a href="/dashboard" class="flex items-center p-3 rounded-lg mb-2 hover:bg-slate-700/70 transition">
                <span class="w-6 h-6 mr-3"></span> Notifications
            </a>
        </nav>
        <a href="/main-page" class="flex items-center p-3 rounded-lg mb-2 bg-red-600 hover:bg-red-700 transition">
            <span class="w-6 h-6 mr-3"></span> Logout
        </a>
    </div>

    <!-- Main Content Area -->
    <div id="main-content" class="flex-1 p-6 lg:p-10">
        
        <!-- Header Strip -->
        <header class="flex justify-between items-center pb-6 border-b border-gray-200 mb-8">
            <h1 class="text-3xl font-light text-gray-800">Welcome!</h1>
            <div class="flex items-center space-x-4">
                <button class="px-4 py-2 bg-gray-800 text-white text-sm font-medium rounded-full hover:bg-gray-700 transition">Dark Mode</button>
                <div class="w-10 h-10 bg-blue-600 text-white font-bold rounded-full flex items-center justify-center">U</div>
            </div>
        </header>

        <!-- Dashboard Summary Title -->
        <h2 class="text-2xl font-light text-gray-700 mb-6 pb-2 border-b border-gray-300">DashBoard Summary</h2>

        <!-- Summary Cards Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-6">
            
            <!-- Card 1: Events (Blue Accent) -->
            <div class="bg-white p-6 rounded-xl shadow-lg transition duration-300 hover:shadow-xl card-events">
                <div class="flex items-center mb-4">
                    <i data-lucide="calendar" class="card-icon mr-2 text-blue-600"></i>
                    <h3 class="text-lg font-semibold text-gray-700">Events</h3>
                </div>
                <ul class="space-y-2 text-gray-600 list-disc pl-5 text-sm">
                    <li>Upcoming Sports Day (May 15th)</li>
                    <li>Parent-Teacher Meeting (May 20th)</li>
                </ul>
                <div class="mt-4 flex">
                    <input type="text" placeholder="New event" class="w-full p-2 border border-gray-300 rounded-l-lg text-sm">
                    <button class="bg-green-500 text-white px-4 rounded-r-lg hover:bg-green-600 transition">Add</button>
                </div>
            </div>

            <!-- Card 2: Exams (Yellow/Orange Accent) -->
            <div class="bg-white p-6 rounded-xl shadow-lg transition duration-300 hover:shadow-xl card-exams">
                <div class="flex items-center mb-4">
                    <i data-lucide="book-open" class="card-icon mr-2 text-yellow-600"></i>
                    <h3 class="text-lg font-semibold text-gray-700">Exams</h3>
                </div>
                <ul class="space-y-2 text-gray-600 list-disc pl-5 text-sm">
                    <li>Math Midterm Schedule Posted</li>
                    <li>Science Practical Due June 1st</li>
                </ul>
                <div class="mt-4 flex">
                    <input type="text" placeholder="New Exam" class="w-full p-2 border border-gray-300 rounded-l-lg text-sm">
                    <button class="bg-green-500 text-white px-4 rounded-r-lg hover:bg-green-600 transition">Add</button>
                </div>
            </div>

            <!-- Card 3: Attendance (Green Accent) -->
            <div class="bg-white p-6 rounded-xl shadow-lg transition duration-300 hover:shadow-xl card-attendance cursor-pointer" onclick="window.location.href='#' /* Placeholder: Link to the detailed attendance page */">
                <div class="flex items-center mb-4">
                    <i data-lucide="user-check" class="card-icon mr-2 text-green-600"></i>
                    <h3 class="text-lg font-semibold text-gray-700">Attendance</h3>
                </div>
                <ul class="space-y-2 text-gray-600 list-disc pl-5 text-sm">
                    <li>Today's Present: 48/50</li>
                    <li>Last Week Avg: 96%</li>
                </ul>
                <div class="mt-4 flex">
                    <input type="text" placeholder="New record" class="w-full p-2 border border-gray-300 rounded-l-lg text-sm">
                    <button class="bg-green-500 text-white px-4 rounded-r-lg hover:bg-green-600 transition">Add</button>
                </div>
            </div>

            <!-- Card 4: General Notices (Red Accent) -->
            <div class="bg-white p-6 rounded-xl shadow-lg transition duration-300 hover:shadow-xl card-notices">
                <div class="flex items-center mb-4">
                    <i data-lucide="bell" class="card-icon mr-2 text-red-600"></i>
                    <h3 class="text-lg font-semibold text-gray-700">General Notices</h3>
                </div>
                <ul class="space-y-2 text-gray-600 list-disc pl-5 text-sm">
                    <li>Library closed Tuesday for maintenance.</li>
                    <li>New catering menu starts this week.</li>
                </ul>
                <div class="mt-4 flex">
                    <input type="text" placeholder="New notice" class="w-full p-2 border border-gray-300 rounded-l-lg text-sm">
                    <button class="bg-green-500 text-white px-4 rounded-r-lg hover:bg-green-600 transition">Add</button>
                </div>
            </div>
        </div>

        <!-- Footer / Copyright -->
        <footer class="mt-20 py-4 text-center text-xs text-gray-500 border-t border-gray-200">
            © 2025 SchoolPortal. All rights reserved. | <a href="#" class="text-blue-600 hover:underline">Privacy Policy</a> | <a href="#" class="text-blue-600 hover:underline">Terms of Service</a>
        </footer>
    </div>

    <script>
        // Simple logic to handle mobile sidebar toggle
        document.addEventListener('DOMContentLoaded', () => {
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.getElementById('main-content');
            
            // Add a hidden button for mobile menu toggling (based on the previous file's logic)
            const toggleBtn = document.createElement('button');
            toggleBtn.innerHTML = '☰';
            toggleBtn.className = 'lg:hidden fixed top-4 left-4 p-2 bg-gray-800 text-white rounded-md z-50 shadow-lg';
            document.body.appendChild(toggleBtn);

            toggleBtn.addEventListener('click', () => {
                sidebar.classList.toggle('open');
                // Optional: Blur main content when sidebar is open
                mainContent.style.filter = sidebar.classList.contains('open') ? 'blur(2px)' : 'none';
            });
            
            // Close sidebar when clicking on main content (on mobile)
            mainContent.addEventListener('click', () => {
                if (window.innerWidth <= 1024 && sidebar.classList.contains('open')) {
                    sidebar.classList.remove('open');
                    mainContent.style.filter = 'none';
                }
            });

            // Ensure sidebar is always visible on desktop
            window.addEventListener('resize', () => {
                if (window.innerWidth > 1024) {
                    sidebar.classList.remove('open');
                    mainContent.style.filter = 'none';
                }
            });
        });
    </script>
</body>
</html>