<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Login</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div class="container">
    <div class="welcome">
      <h1>Welcome Back</h1>
      <img src="https://cdn-icons-png.flaticon.com/512/847/847969.png" alt="user icon">
      <p class="developer">School Management System</p>
    </div>

    <div class="form">
      <h2>Login</h2>
      <form action="/login" method="POST">
        <label>Email</label>
        <input type="email" name="email" required>
        <p class="error"><%= errors.email || '' %></p>

        <label>Password</label>
        <input type="password" name="password" required>
        <p class="error"><%= errors.password || '' %></p>

        <p class="error"><%= errors.general || '' %></p>

        <div class="buttons">
          <button type="submit" class="submit">LOGIN</button>
          <button type="button" class="close" onclick="window.location.href='/register'">REGISTER</button>
        </div>
      </form>
    </div>
  </div>
</body>
</html>
