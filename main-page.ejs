        <li><a href="/">Home</a></li>
        <li><a href="/views/about.ejs">About</a></li>
        <li><a href="/contact">Contact</a></li>
        <li><a class="login-btn" href="/login"><i class="fa-solid fa-right-to-bracket"></i> Login</a></li>
      </ul>
    </nav>
  </header>


  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-content">
      <h1>Empowering Education with Technology</h1>
